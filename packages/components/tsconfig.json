{
  // 继承根配置
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // 输出目录
    "outDir": "dist",
    // 生成声明文件（.d.ts）
    "declaration": true,
    // 允许输出（覆盖根 tsconfig 的 noEmit）
    "noEmit": false,
    // 声明文件输出目录
    "declarationDir": "dist",
    "baseUrl": ".",
      "paths": {
        "@vue-crud-tools/shared": ["../shared/src"]
      }
  },
  // 包含的文件
  "include": [
    "src/**/*"
  ],
  // 排除的文件
  "exclude": [
    "node_modules",
    "dist"
  ]
}
